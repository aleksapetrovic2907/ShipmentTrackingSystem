@inject Presentation.Services.AuthService AuthService

<button class="btn btn-primary" @onclick="ToggleAuth">
    @(AuthService.IsAuthenticated ? "Logout" : "Login")
</button>

@code {
    private async Task ToggleAuth()
    {
        if (AuthService.IsAuthenticated)
        {
            await AuthService.LogOutAsync();
        }
        else
        {
            await AuthService.LogInAsync();
        }
    }
}
