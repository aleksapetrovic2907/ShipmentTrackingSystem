@using Domain.Models

@page "/shipments"
@inject HttpClient Http
@inject NavigationManager NavManager
@inject IJSRuntime JS

<h3>Shipments List</h3>

@if (shipments == null)
{
    <p>Loading shipments...</p>
}
else if (!shipments.Any())
{
    <p>No shipments found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
                <th>Created At</th>
                <th>Delivered At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shipment in shipments)
            {
                <tr>
                    <td>
                        <!-- TODO: Checkout Blazors NavLink -->
                        <span @onclick="() => NavigateToDetails(shipment.Id)">
                            @shipment.Name
                        </span>
                    </td>
                    <td>@shipment.Status</td>
                    <td>@shipment.CreatedAt.ToShortDateString()</td>
                    <td>@(shipment.DeliveredAt?.ToShortDateString() ?? "Not Delivered")</td>
                    
                    <!-- TODO: Hide if user is not authenticated (mock-up auth) -->
                    <td>
                        <button @onclick="() => DeleteShipment(shipment.Id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Shipment> shipments;

    protected override async Task OnInitializedAsync()
    {
        await LoadShipments();
    }

    private async Task LoadShipments()
    {
        try
        {
            shipments = await Http.GetFromJsonAsync<List<Shipment>>("shipments");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching shipments: {ex.Message}");
        }
    }

    private void NavigateToDetails(Guid shipmentId)
    {
        NavManager.NavigateTo($"/shipments/{shipmentId}");
    }

    private async Task DeleteShipment(Guid shipmentId)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Delete this shipment?");

        if (!confirmed) return;

        try
        {
            var response = await Http.DeleteAsync($"shipments/{shipmentId}");

            if (response.IsSuccessStatusCode)
            {
                Console.WriteLine($"Shipment {shipmentId} deleted successfully.");

                // Refresh the list.
                await LoadShipments();
            }
            else
            {
                Console.WriteLine($"Failed to delete shipment {shipmentId}: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting shipment: {ex.Message}");
        }
    }
}
